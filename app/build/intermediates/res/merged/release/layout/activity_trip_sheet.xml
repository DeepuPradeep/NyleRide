<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#3377e6"
    tools:context="com.nyletech.nyleride.TripSheetActivity" >
    
    <GridLayout
            android:id="@+id/head"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#003895"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">
            
            <ImageView android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/nyletech_logo_white"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"/>
            
        </GridLayout>
        
        <View
            android:id="@+id/line"
            android:layout_below="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#9b8d84" />
        
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#80e5e5e5"
            android:gravity="center"
            android:padding="10dp"
            android:text="Trip Details"
            android:textColor="#67356d"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

    <RelativeLayout
    android:id="@+id/maingrid"
    android:layout_below="@+id/title"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
    android:layout_gravity="fill_vertical"
    android:orientation="vertical" >
            
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/hidebtns"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" >
        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#e8e8e7"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_alignParentTop="true">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Student ID:"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/id"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:hint="Student ID"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:focusable="false"
                    />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#e8e8e7"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:layout_alignParentTop="true">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Student Name:"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:hint="Student Name"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:focusable="false"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#e8e8e7"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:layout_alignParentTop="true">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Date:"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/date"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:hint="DD-MM-YYYY"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:focusable="false"
                    />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#e8e8e7"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:layout_alignParentTop="true">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="RTO No:"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/rtoNo"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:hint="KA **** ****"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:focusable="false"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#e8e8e7"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:layout_alignParentTop="true">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Route No:"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/routeNo"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:hint="**"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:focusable="false"
                    />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#e8e8e7"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:layout_alignParentTop="true">

                <TextView android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="P/D Time:"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/pdTime"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:hint="HH:MM"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:focusable="false"
                    />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#e8e8e7"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:layout_alignParentTop="true">

                <TextView android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Trip Type:"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/tripType"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:hint="Pick/Drop"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:focusable="false"
                    />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/driverNoLayout"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#e8e8e7"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:layout_alignParentTop="true">

                <TextView android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Driver Cell:"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/driverNo"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:hint="98********"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:focusable="false"
                    />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#e8e8e7"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:layout_alignParentTop="true">

                <TextView android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="ETC No:"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/etc"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:hint="ETC Code"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:editable="false"
                    android:focusable="false"
                    />
            </LinearLayout>
            
        </GridLayout>
        
        </ScrollView>
        
        <GridLayout
            android:id="@+id/hidebtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
    		android:orientation="vertical" >
        
            <TableLayout
                android:id="@+id/buttonsgrid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#e8e8e7"
                android:stretchColumns="0.33,0.33,0.33" >

                <TableRow
                    android:id="@+id/grid1"
                    android:layout_height="wrap_content"
